<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Your Application Name</display-name>

  <servlet>
    <servlet-name>RegistrarServlet</servlet-name>
    <servlet-class>controller.RegistrarServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegistrarServlet</servlet-name>
    <url-pattern>/registrar</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RegistrarCursoServlet</servlet-name>
    <servlet-class>controller.RegistrarCursoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RegistrarCursoServlet</servlet-name>
    <url-pattern>/registrar-curso</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditarCursoServlet</servlet-name>
    <servlet-class>controller.EditarCursoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditarCursoServlet</servlet-name>
    <url-pattern>/editar-curso</url-pattern>
  </servlet-mapping>

</web-app>
